<%= form_for @post, class: "form" do |f| %>

  <div class="mb-3">
    <%= f.label :date, class: "mb-3 control-label" %>
    <%= f.date_field :date, class: "form-control " %>
  </div>

  <div class="mb-3">
    <%= f.label :rationale, class: "mb-3 control-label" %>
    <%= f.text_area :rationale, class: "form-control" %>
  </div>

  <%= render partial: 'posts/status', locals: { f: f } if current_user.type == 'AdminUser' %>

  <%= f.submit 'Save', class: "btn btn-primary" %>

<% end %>

